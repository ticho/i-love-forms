<div class="container">
<h1>Create a new user</h1>
<%= form_for( @user , remote: true) do |f| %>
<%= f.label('username', content = "User Name") %>
<%= f.text_field(:username, {class: "form-control", placeholder: "User name"}) %>
<%= f.label('email', content = "Email") %>
<%= f.text_field(:email, {class: "form-control", placeholder: "Email"}) %>
<%= f.label('bio', content = "Bio") %>
<%= f.text_area(:bio, {class: "form-control", placeholder: "Hello ! I am ..."}) %>
<br>
<%= f.submit({class: "btn btn-primary"}) %>
<% end %>
<br>
<%= link_to("Back to home", content=root_path, options = {class: 'btn btn-sm btn-primary'}) %>
</div>


